<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DashboardRoomsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_1">

        <RelativeLayout
            android:id="@+id/rooms_header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">
            <ImageView
                android:id="@+id/gridview_imageview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/grid_blue"/>
            <ImageView
                android:id="@+id/listview_imageview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/gridview_imageview"
                android:layout_toRightOf="@id/gridview_imageview"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/list_blue"/>
            <ImageView
                android:id="@+id/sort_imageview"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/sort_blue"/>
        </RelativeLayout>

        <GridView
            android:id="@+id/rooms_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rooms_header_layout"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="72dp"
            android:clipToPadding="false"
            android:numColumns="2"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"
            android:stretchMode="columnWidth"
            android:scrollbars="none"
            android:gravity="center"/>

        <ListView
            android:id="@+id/rooms_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rooms_header_layout"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="0dp"
            android:scrollbars="none"
            tools:listitem="@layout/list_item_room_dashboard"/>

        <TextView
            android:id="@+id/rooms_gridview_long_press_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/rooms_gridview"
            android:textColor="@color/darkGrayColor"
            android:textSize="16sp"
            android:text="@string/room_long_press_hint"/>

        <LinearLayout
            android:id="@+id/add_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <RelativeLayout
                    android:id="@+id/add_new_place_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/add_place_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/add_place_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/add_place_icon"
                        android:textSize="18sp"
                        android:textColor="@color/darkestGrayColor"
                        android:textAlignment="center"
                        android:text="@string/add_new_place"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/add_new_room_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/add_room_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/add_room_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/add_room_icon"
                        android:textSize="18sp"
                        android:textColor="@color/darkestGrayColor"
                        android:textAlignment="center"
                        android:text="@string/add_new_room"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/add_new_device_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/add_device_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/add_device_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/add_device_icon"
                        android:textSize="18sp"
                        android:textColor="@color/darkestGrayColor"
                        android:textAlignment="center"
                        android:text="@string/add_new_device"/>
                </RelativeLayout>
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/add_fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:menu_colorNormal="@color/blueColor"
            app:menu_colorPressed="@color/bluePressedColor"
            app:menu_colorRipple="@color/blueRippleColor"
            android:elevation="16dp"
            app:menu_fab_size="normal"
            app:menu_showShadow="true"
            app:menu_icon="@drawable/ic_add_black_24dp">
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_place_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                app:fab_colorNormal="@color/blueColor"
                app:fab_colorPressed="@color/bluePressedColor"
                app:fab_colorRipple="@color/blueRippleColor"
                app:fab_size="mini"
                app:fab_label="@string/place"/>
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_room_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                app:fab_colorNormal="@color/blueColor"
                app:fab_colorPressed="@color/bluePressedColor"
                app:fab_colorRipple="@color/blueRippleColor"
                app:fab_size="mini"
                app:fab_label="@string/room"/>
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_device_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                app:fab_colorNormal="@color/blueColor"
                app:fab_colorPressed="@color/bluePressedColor"
                app:fab_colorRipple="@color/blueRippleColor"
                app:fab_size="mini"
                app:fab_label="@string/device"/>
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>

</FrameLayout>