<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DashboardRoomsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_1">
        <GridView
            android:id="@+id/rooms_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="72dp"
            android:clipToPadding="false"
            android:numColumns="2"
            android:verticalSpacing="4dp"
            android:horizontalSpacing="4dp"
            android:stretchMode="columnWidth"
            android:scrollbars="none"
            android:gravity="center"/>

        <TextView
            android:id="@+id/empty_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="You don't have any rooms or RonixTech Smart Controllers added yet.\nStart by clicking the button below."/>

        <Button
            android:id="@+id/add_device_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/empty_textview"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_background_round_blue"
            android:textColor="@color/whiteColor"
            android:text="@string/add_device"/>

        <Button
            android:id="@+id/add_room_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/empty_textview"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_background_round_blue"
            android:textColor="@color/whiteColor"
            android:text="@string/add_room"/>

        <Button
            android:id="@+id/add_floor_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/empty_textview"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_background_round_blue"
            android:textColor="@color/whiteColor"
            android:text="@string/add_floor"/>

        <Button
            android:id="@+id/add_place_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_below="@id/empty_textview"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_background_round_blue"
            android:textColor="@color/whiteColor"
            android:text="@string/add_place"/>

        <LinearLayout
            android:id="@+id/add_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_marginTop="32dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/add_new_place_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/add_place_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/add_place_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/add_place_icon"
                        android:textSize="18sp"
                        android:textColor="@color/darkestGrayColor"
                        android:textAlignment="center"
                        android:text="@string/add_new_place"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/add_new_room_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/add_room_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/add_room_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/add_room_icon"
                        android:textSize="18sp"
                        android:textColor="@color/darkestGrayColor"
                        android:textAlignment="center"
                        android:text="@string/add_new_room"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/add_new_device_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/add_device_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/add_device_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/add_device_icon"
                        android:textSize="18sp"
                        android:textColor="@color/darkestGrayColor"
                        android:textAlignment="center"
                        android:text="@string/add_new_device"/>
                </RelativeLayout>
            </LinearLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/add_fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:menu_colorNormal="@color/blueColor"
            app:menu_colorPressed="@color/bluePressedColor"
            app:menu_colorRipple="@color/blueRippleColor"
            android:elevation="16dp"
            app:menu_fab_size="normal"
            app:menu_showShadow="true"
            app:menu_icon="@drawable/ic_add_black_24dp">
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_place_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                app:fab_colorNormal="@color/blueColor"
                app:fab_colorPressed="@color/bluePressedColor"
                app:fab_colorRipple="@color/blueRippleColor"
                app:fab_size="mini"
                app:fab_label="@string/place"/>
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_room_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                app:fab_colorNormal="@color/blueColor"
                app:fab_colorPressed="@color/bluePressedColor"
                app:fab_colorRipple="@color/blueRippleColor"
                app:fab_size="mini"
                app:fab_label="@string/room"/>
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_device_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                app:fab_colorNormal="@color/blueColor"
                app:fab_colorPressed="@color/bluePressedColor"
                app:fab_colorRipple="@color/blueRippleColor"
                app:fab_size="mini"
                app:fab_label="@string/device"/>
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>

</FrameLayout>