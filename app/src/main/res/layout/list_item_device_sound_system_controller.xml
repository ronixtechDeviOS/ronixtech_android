<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/device_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/deviceBackgroundDarkBlueColor">
            <ImageView
                android:id="@+id/device_icon_imageview"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/switch_icon"
                android:padding="8dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_30_transparent_background">
            <RelativeLayout
                android:id="@+id/device_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/device_expand_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/arrow_thick_down_white" />

                <ImageView
                    android:id="@+id/device_advanced_options_button"
                    android:layout_width="50dp"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    android:src="@drawable/dots_white" />

                <TextView
                    android:id="@+id/device_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/device_expand_imageview"
                    android:layout_toRightOf="@id/device_expand_imageview"
                    android:layout_toStartOf="@id/device_advanced_options_button"
                    android:layout_toLeftOf="@id/device_advanced_options_button"
                    android:text="DeviceName"
                    android:textColor="@color/whiteColor"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/scanning_network_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_title_layout"
                android:padding="4dp">
                <ProgressBar
                    android:id="@+id/scanning_network_progress_circle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/scanning_network_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/scanning_network_progress_circle"
                    android:layout_toRightOf="@id/scanning_network_progress_circle"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="18sp"
                    android:textColor="@color/whiteColor"
                    android:text="@string/scanning_network"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mqtt_reachability_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/scanning_network_layout"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/mqtt_reachability_imageview"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_alert"/>
                <TextView
                    android:id="@+id/mqtt_reachability_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/mqtt_reachability_imageview"
                    android:layout_toRightOf="@id/mqtt_reachability_imageview"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/redColor"
                    android:text="@string/device_unreachable"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/firmware_available_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mqtt_reachability_layout"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/firmware_available_imageview"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_alert"/>
                <TextView
                    android:id="@+id/firmware_available_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/firmware_available_imageview"
                    android:layout_toRightOf="@id/firmware_available_imageview"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/redColor"
                    android:text="@string/firmware_available"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/last_seen_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firmware_available_layout"
                android:padding="4dp">
                <ImageView
                    android:id="@+id/last_seen_imageview"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/last_seen_clock_icon"
                    android:tint="@color/whiteColor"/>
                <TextView
                    android:id="@+id/last_seen_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/last_seen_imageview"
                    android:layout_toRightOf="@id/last_seen_imageview"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/whiteColor"
                    android:text="@string/last_seen"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/device_location_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/last_seen_layout"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:textColor="@color/darkestGrayColor"/>


            <RelativeLayout
                android:id="@+id/device_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_seen_layout">
                <ImageView
                    android:id="@+id/device_type_imageview"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/device_colored_icon"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/device_type_imageview"
                    android:layout_toRightOf="@id/device_type_imageview"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="4dp"
                    android:paddingLeft="4dp">
                    <TextView
                        android:id="@+id/sound_device_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/whiteColor"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:text="DeviceName"/>
                    <RelativeLayout
                        android:id="@+id/active_mode_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sound_device_name_textview"
                        android:layout_marginTop="4dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <TextView
                            android:id="@+id/device_active_mode_static_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/whiteColor"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:text="@string/active_mode"/>
                        <TextView
                            android:id="@+id/device_active_mode_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/device_active_mode_static_textview"
                            android:layout_toRightOf="@id/device_active_mode_static_textview"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/whiteColor"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:text="UPNP"/>
                        <ImageView
                            android:id="@+id/mode_arrow_imageview"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_toEndOf="@id/device_active_mode_textview"
                            android:layout_toRightOf="@id/device_active_mode_textview"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/button_background_round_border_blue"
                            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/speakers_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_below="@id/active_mode_layout"
                        android:orientation="vertical"/>
                    <SeekBar
                        android:id="@+id/device_volume_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        android:layout_below="@id/active_mode_layout"
                        android:thumb="@drawable/seekbar_thumb"
                        android:padding="16dp"/>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>