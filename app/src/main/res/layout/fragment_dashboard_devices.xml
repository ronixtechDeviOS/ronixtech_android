<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DashboardDevicesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_dark_2">

        <RelativeLayout
            android:id="@+id/devices_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <RelativeLayout
                android:id="@+id/room_devices_layout"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="74dp"
                android:layout_marginTop="35dp"
                android:layout_alignParentTop="true"
                >
                <HorizontalScrollView
                    android:id="@+id/room_lines_horizontal_scrollview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/scroll_next_imageview"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <GridView
                            android:id="@+id/room_devices_gridview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/list_item_device_dashboard"
                            android:columnWidth="84dp"
                            android:gravity="center"
                            android:numColumns="9"
                            android:horizontalSpacing="0dp"
                            android:verticalSpacing="0dp"
                            android:scrollbarAlwaysDrawHorizontalTrack="false"
                            android:scrollbarAlwaysDrawVerticalTrack="false"
                            android:scrollbars="none"
                            android:fadeScrollbars="false"
                            android:scrollbarThumbVertical="@android:color/transparent"
                            android:scrollbarThumbHorizontal="@android:color/transparent"
                            android:scrollbarSize="0dp"
                            android:stretchMode="none" />
                    </LinearLayout>
                </HorizontalScrollView>

                <ImageView
                    android:id="@+id/scroll_next_imageview"
                    android:layout_width="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/arrow_thick_right_white"
                    android:background="@drawable/rounded_border_small"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/devices_connector"
                android:layout_width="130dp"
                android:layout_height="52dp"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/room_devices_layout"
                android:src="@drawable/devices_connector"
                />
             <ListView
                 android:id="@+id/devices_listview"
                 android:layout_below="@+id/room_devices_layout"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginTop="50dp"
                 android:paddingBottom="0dp"
                 android:clipToPadding="false"
                 tools:listitem="@layout/list_item_device_new"/>

           <!-- <ImageView
                android:id="@+id/orange_border"
                android:layout_width="20dp"
                android:layout_height="369dp"
                android:layout_below="@+id/room_devices_layout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="330dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@+id/devices_listview"
                android:background="@drawable/rounded_border" />-->
        </RelativeLayout>


        <!--<TextView
            android:id="@+id/devices_listview_long_press_hint_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/devices_view"
            android:textColor="@color/darkGrayColor"
            android:textSize="16sp"
            android:text="@string/unit_long_press_hint"/>-->

        <LinearLayout
            android:id="@+id/add_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_dark"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/add_new_device_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/add_device_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:foreground="@drawable/circle_indicator_blue_dark"
                        android:src="@drawable/add_device_icon_circular"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/add_device_icon"
                        android:textSize="18sp"
                        android:textColor="@color/whiteColor"
                        android:textAlignment="center"
                        android:text="@string/add_new_device"/>
                </RelativeLayout>
            </LinearLayout>

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"/>
        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/add_fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:menu_colorNormal="@color/blueColor"
            app:menu_colorPressed="@color/bluePressedColor"
            app:menu_colorRipple="@color/blueRippleColor"
            android:elevation="16dp"
            app:menu_fab_size="normal"
            app:menu_showShadow="true"
            app:menu_icon="@drawable/ic_add_black_24dp">
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_place_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_add_black_24dp"
                app:fab_colorNormal="@color/blueColor"
                app:fab_colorPressed="@color/bluePressedColor"
                app:fab_colorRipple="@color/blueRippleColor"
                app:fab_size="mini"
                app:fab_label="@string/place"/>
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_room_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_add_black_24dp"
                app:fab_colorNormal="@color/blueColor"
                app:fab_colorPressed="@color/bluePressedColor"
                app:fab_colorRipple="@color/blueRippleColor"
                app:fab_size="mini"
                app:fab_label="@string/room"/>
            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/add_device_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                app:fab_colorNormal="@color/blueColor"
                app:fab_colorPressed="@color/bluePressedColor"
                app:fab_colorRipple="@color/blueRippleColor"
                app:fab_size="mini"
                app:fab_label="@string/device"/>
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>


</FrameLayout>