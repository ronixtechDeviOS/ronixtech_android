                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/blackColor"
                android:text="-"/>

            <TextView
                android:id="@+id/device_firmware_version_static_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/darkGrayColor"
                android:text="@string/device_firmware_version"/>

            <TextView
                android:id="@+id/device_firmware_version_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/blackColor"
                android:text="101416"/>

            <TextView
                android:id="@+id/device_firmware_online_version_static_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/darkGrayColor"
                android:text="@string/device_firmware_online_version"/>

            <TextView
                android:id="@+id/device_firmware_online_version_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/blackColor"
                android:text="101416"/>

            <TextView
                android:id="@+id/device_hw_firmware_version_static_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/darkGrayColor"
                android:text="@string/device_hw_firmware_version"/>

            <TextView
                android:id="@+id/device_hw_firmware_version_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
