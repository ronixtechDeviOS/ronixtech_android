            <TextView
                android:id="@+id/device_hw_firmware_online_version_static_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/darkGrayColor"
                android:text="@string/device_hw_firmware_online_version"/>

            <TextView
                android:id="@+id/device_hw_firmware_online_version_textview"
