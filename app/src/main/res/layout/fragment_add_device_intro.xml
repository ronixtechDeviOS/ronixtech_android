<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.AddDeviceFragmentIntro">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteColor">

            <LinearLayout
                android:id="@+id/device_names_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/left_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:layout_gravity="center_vertical"/>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/devices_hints_tabs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:minHeight="50dp"
                    app:tabGravity="fill"
                    app:tabIndicatorColor="@color/blueColor"
                    app:tabMode="scrollable"
                    android:background="@color/whiteColor"
                    style="@style/MyCustomTabLayout"
                    app:tabSelectedTextColor="@color/blueColor"/>
                <ImageView
                    android:id="@+id/right_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/devices_hints_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/device_names_layout"
                android:background="@color/whiteColor"
                android:layout_marginBottom="72dp"/>

            <Button
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/button_background_round_blue"
                android:text="@string/continue_button"/>

        </RelativeLayout>

    </FrameLayout>
</ScrollView>