<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ronixtech.ronixhome.fragments.WifiListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor">
        <TextView
            android:id="@+id/search_status_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="center"
            android:textColor="@color/blackColor"
            android:textSize="16sp"
            android:text="@string/searching_for_networks"/>

        <RelativeLayout
            android:id="@+id/hidden_network_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="4dp"
            android:background="@drawable/button_background_round_border_blue">
            <ImageView
                android:id="@+id/hidden_network_imageview"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/add"/>
            <TextView
                android:id="@+id/hidden_network_buttin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/hidden_network_imageview"
                android:layout_toRightOf="@id/hidden_network_imageview"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true"
                android:textColor="@color/blackColor"
                android:textSize="16sp"
                android:text="@string/enter_network_details_manually"/>
        </RelativeLayout>

        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/whiteColor"
            android:background="@drawable/button_background_round_gray"
            android:enabled="false"
            android:text="@string/continue_button"/>

        <ListView
            android:id="@+id/networks_listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/hidden_network_layout"/>
    </RelativeLayout>


</FrameLayout>
