                                android:src="@drawable/ic_keyboard_arrow_right_blue_24dp" />
                            <TextView
                                android:id="@+id/third_line_type_textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/third_line_type_imageview"
                                android:layout_toLeftOf="@id/third_line_type_arrow_image_view"
                                android:layout_toRightOf="@id/third_line_type_imageview"
                                android:layout_toStartOf="@id/third_line_type_arrow_image_view"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:text="@string/line_type_hint"
                                android:textColor="@color/blackColor"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <RadioButton
                        android:id="@+id/third_line_mode_secondary_mode_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="@string/line_mode_secondary"/>
                    <TextView
                        android:id="@+id/third_line_mode_secondary_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:text="@string/line_mode_secondary_description"/>
                    <RelativeLayout
                        android:id="@+id/third_line_selected_line_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:padding="4dp"
                        android:background="@color/lightestGrayColor">
                        <TextView
                            android:id="@+id/third_line_selected_line_title_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/darkGrayColor"
                            android:textSize="16sp"
                            android:text="@string/selected_line_colon"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            android:padding="4dp"
                            android:layout_below="@id/third_line_selected_line_title_textview"
                            android:background="@drawable/button_background_round_border_blue">
                            <ImageView
                                android:id="@+id/third_line_selected_line_type_imageview"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_centerVertical="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/device_colored_icon"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/third_line_selected_line_type_imageview"
                                android:layout_toRightOf="@id/third_line_selected_line_type_imageview">
                                <TextView
                                    android:id="@+id/third_line_selected_line_textvie"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:textColor="@color/blackColor"
                                    android:textSize="16sp"
                                    android:text="@string/line_selection_hint"/>
                                <TextView
                                    android:id="@+id/third_line_selected_line_location_textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/third_line_selected_line_textvie"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:textSize="16sp"
                                    android:textColor="@color/darkestGrayColor"
                                    android:text=""/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/third_line_mode_difference_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:text="@string/line_mode_difference"/>
                </RadioGroup>
            </RelativeLayout>

            <Button
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/third_line_configuration_layout"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/whiteColor"
                android:background="@drawable/button_background_round_gray"
                android:enabled="false"
                android:text="@string/continue_button"/>
        </RelativeLayout>

    </FrameLayout>
</ScrollView>