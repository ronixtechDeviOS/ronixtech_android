                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/second_line_selected_line_type_imageview"
                                android:layout_toRightOf="@id/second_line_selected_line_type_imageview">
