<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.AddDeviceConfigurationFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteColor">
            <TextView
                android:id="@+id/device_name_title_textivew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:text="@string/unit_name" />
            <EditText
                android:id="@+id/device_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_name_title_textivew"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:textAlignment="center"
                android:hint="@string/unit_name_hint"/>
            <TextView
                android:id="@+id/line_names_configuration_title_textivew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/device_name_edittext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/blackColor"
                android:text="@string/configure_lines_title" />

            <RelativeLayout
                android:id="@+id/first_line_configuration_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_names_configuration_title_textivew"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/first_linee_title_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/darkGrayColor"
                    android:text="@string/line_1_name_hint"/>
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/first_line_gif_imageview"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/first_linee_title_textview"
                    android:scaleType="centerCrop"
                    android:src="@drawable/line_left"/>
                <EditText
                    android:id="@+id/first_line_name_edittxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_line_gif_imageview"
                    android:layout_marginTop="8dp"
                    android:inputType="textCapWords"
                    android:imeOptions="actionNext"
                    android:textAlignment="center"
                    android:hint="@string/line_1_name_hint"/>
                <RadioGroup
                    android:id="@+id/first_line_mode_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/first_line_name_edittxt"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/first_line_mode_title_textivew"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/darkGrayColor"
                        android:text="@string/line_mode_title" />
                    <RadioButton
                        android:id="@+id/first_line_mode_primary_mode_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="@string/line_mode_primary"/>
                    <TextView
                        android:id="@+id/first_line_mode_primary_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:text="@string/line_mode_primary_description"/>
                    <RelativeLayout
                        android:id="@+id/first_line_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="4dp">
                        <TextView
                            android:id="@+id/first_line_type_title_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textColor="@color/darkGrayColor"
                            android:text="@string/line_type"/>
                        <RelativeLayout
                            android:id="@+id/first_line_type_selection_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/first_line_type_title_textview"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            android:padding="4dp"
                            android:background="@drawable/button_background_round_border_blue">
                            <ImageView
                                android:id="@+id/first_line_type_imageview"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:src="@drawable/line_type_led__lamp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginLeft="16dp"/>
                            <ImageView
                                android:id="@+id/first_line_type_arrow_image_view"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:src="@drawable/ic_keyboard_arrow_right_blue_24dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="16dp"
                                android:layout_marginRight="16dp"/>
                            <TextView
                                android:id="@+id/first_line_type_textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/first_line_type_imageview"
                                android:layout_toRightOf="@id/first_line_type_imageview"
                                android:layout_toStartOf="@id/first_line_type_arrow_image_view"
                                android:layout_toLeftOf="@id/first_line_type_arrow_image_view"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:textSize="16sp"
                                android:textColor="@color/blackColor"
                                android:text="@string/line_type_hint"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RadioButton
                        android:id="@+id/first_line_mode_secondary_mode_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="@string/line_mode_secondary"/>
                    <TextView
                        android:id="@+id/first_line_mode_secondary_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:text="@string/line_mode_secondary_description"/>
                    <RelativeLayout
                        android:id="@+id/first_line_selected_line_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:padding="4dp"
                        android:background="@color/lightestGrayColor">
                        <TextView
                            android:id="@+id/first_line_selected_line_title_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/darkGrayColor"
                            android:textSize="16sp"
                            android:text="@string/selected_line_colon"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            android:padding="4dp"
                            android:layout_below="@id/first_line_selected_line_title_textview"
                            android:background="@drawable/button_background_round_border_blue">
                            <ImageView
                                android:id="@+id/first_line_selected_line_type_imageview"
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_centerVertical="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/device_colored_icon"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@id/first_line_selected_line_type_imageview"
                                android:layout_toRightOf="@id/first_line_selected_line_type_imageview">
                                <TextView
                                    android:id="@+id/first_line_selected_line_textvie"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:textColor="@color/blackColor"
                                    android:textSize="16sp"
                                    android:text="@string/line_selection_hint"/>
                                <TextView
