                    <RadioButton
                        android:id="@+id/second_line_mode_primary_mode_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="@string/line_mode_primary"/>
                    <TextView
                        android:id="@+id/second_line_mode_primary_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:text="@string/line_mode_primary_description"/>
                    <RelativeLayout
                        android:id="@+id/second_line_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="4dp">
                        <TextView
                            android:id="@+id/second_line_type_title_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:textColor="@color/darkGrayColor"
                            android:text="@string/line_type"/>
                        <RelativeLayout
                            android:id="@+id/second_line_type_selection_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/second_line_type_title_textview"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            android:padding="4dp"
                            android:background="@drawable/button_background_round_border_blue">
                            <ImageView
                                android:id="@+id/second_line_type_imageview"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:src="@drawable/line_type_led__lamp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginLeft="16dp"/>
                            <ImageView
                                android:id="@+id/second_line_type_arrow_image_view"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:src="@drawable/ic_keyboard_arrow_right_blue_24dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginEnd="16dp"
                                android:layout_marginRight="16dp"/>
                            <TextView
                                android:id="@+id/second_line_type_textview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/second_line_type_imageview"
                                android:layout_toRightOf="@id/second_line_type_imageview"
                                android:layout_toStartOf="@id/second_line_type_arrow_image_view"
                                android:layout_toLeftOf="@id/second_line_type_arrow_image_view"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:textSize="16sp"
                                android:textColor="@color/blackColor"
                                android:text="@string/line_type_hint"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RadioButton
                        android:id="@+id/second_line_mode_secondary_mode_radiobutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="@string/line_mode_secondary"/>
                    <TextView
                        android:id="@+id/second_line_mode_secondary_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:text="@string/line_mode_secondary_description"/>
                    <RelativeLayout
                        android:id="@+id/second_line_selected_line_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:padding="4dp"
                        android:background="@color/lightestGrayColor">
                        <TextView
                            android:id="@+id/second_line_selected_line_title_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/darkGrayColor"
                            android:textSize="16sp"
                            android:text="@string/selected_line_colon"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            android:padding="4dp"
