                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/third_line_gif_imageview"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
