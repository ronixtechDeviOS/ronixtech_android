                        android:checked="true"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="@string/line_mode_primary"/>
                    <TextView
                        android:id="@+id/third_line_mode_primary_description_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackColor"
                        android:textSize="16sp"
                        android:text="@string/line_mode_primary_description"/>
                    <RelativeLayout
                        android:id="@+id/third_line_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="4dp">
                        <TextView
                            android:id="@+id/third_line_type_title_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textColor="@color/darkGrayColor"
                            android:textSize="16sp"
                            android:text="@string/line_type"/>
                        <RelativeLayout
                            android:id="@+id/third_line_type_selection_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/third_line_type_title_textview"
                            android:layout_marginEnd="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/button_background_round_border_blue"
                            android:padding="4dp">
                            <ImageView
                                android:id="@+id/third_line_type_imageview"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="16dp"
                                android:layout_marginStart="16dp"
                                android:src="@drawable/line_type_led__lamp" />
                            <ImageView
                                android:id="@+id/third_line_type_arrow_image_view"
                                android:layout_width="46dp"
                                android:layout_height="46dp"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="16dp"
