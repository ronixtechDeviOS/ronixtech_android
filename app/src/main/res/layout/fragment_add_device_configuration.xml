                    android:layout_height="wrap_content"
                    android:layout_below="@id/second_line_name_edittxt"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">
                    <TextView
