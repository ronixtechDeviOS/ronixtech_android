<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.AddPlaceFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_dark">
            <TextView
                android:id="@+id/add_place_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="24sp"
                android:textColor="@color/whiteColor"
                android:textAlignment="center"
                android:text="@string/add_place_title"/>
            <ImageView
                android:id="@+id/add_place_imageview"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/place_icon_circular"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/add_place_title_textview"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/add_place_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_place_imageview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/whiteColor"
                android:textSize="16sp"
                android:textAlignment="center"
                android:text="@string/add_place_description"/>

            <TextView
                android:id="@+id/place_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/add_place_description_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="18sp"
                android:text="@string/place_name"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/place_name_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_name_textview"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:textColorHint="@color/whiteColor">
                <EditText
                    android:id="@+id/place_name_edittedxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/whiteColor"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:textAlignment="center"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/whiteColor"
                    android:hint="@string/place_name"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/place_type_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_name_inputlayout"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="18sp"
                android:text="@string/place_type"/>
            <RelativeLayout
                android:id="@+id/place_type_selection_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_type_textview"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:background="@drawable/button_background_bottom_line_gray">
                <ImageView
                    android:id="@+id/type_imageview"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/place_icon_circular"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"/>
                <ImageView
                    android:id="@+id/selected_place_arrow_image_view"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/arrow_thick_down_orange"
                    android:padding="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
                <TextView
                    android:id="@+id/type_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/type_imageview"
                    android:layout_toRightOf="@id/type_imageview"
                    android:layout_toStartOf="@id/selected_place_arrow_image_view"
                    android:layout_toLeftOf="@id/selected_place_arrow_image_view"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/whiteColor"
                    android:textSize="16sp"
                    android:text="@string/place_type_hint"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/place_number_of_floors_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_type_selection_layout"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/place_number_of_floors_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="18sp"
                    android:text="@string/number_of_floors_colon"/>

                <TextView
                    android:id="@+id/selected_number_of_floors_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/place_number_of_floors_textview"
                    android:layout_toRightOf="@id/place_number_of_floors_textview"
                    android:layout_toStartOf="@id/number_of_floors_buttons_layout"
                    android:layout_toLeftOf="@id/number_of_floors_buttons_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="center"
                    android:textColor="@color/whiteColor"
                    android:textSize="18sp"
                    android:text="1"/>

                <LinearLayout
                    android:id="@+id/number_of_floors_buttons_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/decrement_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_round_border_gray"
                        android:textColor="@color/whiteColor"
                        android:text="@string/minus_symbol"/>
                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"/>
                    <Button
                        android:id="@+id/increment_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_round_border_gray"
                        android:textColor="@color/whiteColor"
                        android:text="@string/add_symbol"/>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/place_wifi_network_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_number_of_floors_layout"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="@color/whiteColor"
                android:textSize="18sp"
                android:text="@string/wifi_networks"/>
            <ListView
                android:id="@+id/selected_wifi_networks_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/place_wifi_network_textview"
                tools:listitem="@layout/list_item_wifi_network_editable"/>

            <RelativeLayout
                android:id="@+id/wifi_network_selection_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/selected_wifi_networks_listview"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:background="@drawable/button_background_bottom_line_gray">
                <ImageView
                    android:id="@+id/selected_wifi_network_imageview"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/signal_0"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"/>
                <ImageView
                    android:id="@+id/selected_wifi_network_arrow_image_view"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/arrow_thick_down_orange"
                    android:padding="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
                <TextView
                    android:id="@+id/selected_wifi_network_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/selected_wifi_network_imageview"
                    android:layout_toRightOf="@id/selected_wifi_network_imageview"
                    android:layout_toStartOf="@id/selected_wifi_network_arrow_image_view"
                    android:layout_toLeftOf="@id/selected_wifi_network_arrow_image_view"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:text="@string/select_wifi_network_hint"/>
            </RelativeLayout>

            <CheckBox
                android:id="@+id/default_place_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wifi_network_selection_layout"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:checked="true"
                android:textColor="@color/whiteColor"
                android:text="@string/default_place_hint"/>

            <Button
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/default_place_checkbox"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_background_round_white"
                android:textColor="@color/darkBlueColor"
                android:text="@string/continue_button"/>

        </RelativeLayout>

    </FrameLayout>
</ScrollView>