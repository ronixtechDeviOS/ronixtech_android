<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.AddRoomFragment">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_dark">
            <TextView
                android:id="@+id/add_room_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="24sp"
                android:textColor="@color/whiteColor"
                android:textAlignment="center"
                android:text="@string/add_room_title"/>
            <ImageView
                android:id="@+id/add_room_imageview"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/room_icon_circular"
                android:foreground="@drawable/circle_indicator_blue_dark"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/add_room_title_textview"/>
            <TextView
                android:id="@+id/add_room_description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_room_imageview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/whiteColor"
                android:textAlignment="center"
                android:text="@string/add_room_description"/>

            <TextView
                android:id="@+id/room_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_room_description_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/whiteColor"
                android:text="@string/place"/>
            <RelativeLayout
                android:id="@+id/place_selection_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_title_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:background="@drawable/button_background_bottom_line_gray">
                <ImageView
                    android:id="@+id/selected_place_image_view"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/place_icon_circular"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"/>
                <ImageView
                    android:id="@+id/selected_place_arrow_image_view"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/arrow_thick_down_orange"
                    android:padding="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
                <TextView
                    android:id="@+id/selected_place_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/selected_place_image_view"
                    android:layout_toRightOf="@id/selected_place_image_view"
                    android:layout_toStartOf="@id/selected_place_arrow_image_view"
                    android:layout_toLeftOf="@id/selected_place_arrow_image_view"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:text="@string/place_selection_hint"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/floor_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_below="@id/place_selection_layout"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/floor_level_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@color/whiteColor"
                    android:text="@string/floor_colon"/>

                <TextView
                    android:id="@+id/selected_floor_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/floor_level_textview"
                    android:layout_toRightOf="@id/floor_level_textview"
                    android:layout_toStartOf="@id/floor_actions_layout"
                    android:layout_toLeftOf="@id/floor_actions_layout"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textColor="@color/whiteColor"
                    android:text="1"/>

                <LinearLayout
                    android:id="@+id/floor_actions_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/decrement_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_round_border_gray"
                        android:textColor="@color/whiteColor"
                        android:text="@string/minus_symbol"/>
                    <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"/>
                    <Button
                        android:id="@+id/increment_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background_round_border_gray"
                        android:textColor="@color/whiteColor"
                        android:text="@string/add_symbol"/>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/room_type_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/floor_layout"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/whiteColor"
                android:text="@string/room_type"/>
            <RelativeLayout
                android:id="@+id/room_type_selection_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_type_title_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:background="@drawable/button_background_bottom_line_gray">
                <ImageView
                    android:id="@+id/room_type_imageview"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/room_icon_circular"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"/>
                <ImageView
                    android:id="@+id/room_type_arrow_image_view"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/arrow_thick_down_orange"
                    android:padding="16dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"/>
                <TextView
                    android:id="@+id/room_type_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/room_type_imageview"
                    android:layout_toRightOf="@id/room_type_imageview"
                    android:layout_toStartOf="@id/room_type_arrow_image_view"
                    android:layout_toLeftOf="@id/room_type_arrow_image_view"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/whiteColor"
                    android:text="@string/room_type_hint"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/room_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@id/room_type_selection_layout"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/whiteColor"
                android:text="@string/room_name"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/room_name_inputlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_name_textview"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:textColorHint="@color/whiteColor">
                <EditText
                    android:id="@+id/room_name_edittedxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/whiteColor"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords"
                    android:textAlignment="center"
                    android:textColor="@color/whiteColor"
                    android:textColorHint="@color/whiteColor"
                    android:hint="@string/room_name"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/continue_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/room_name_inputlayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_background_round_white"
                android:textColor="@color/darkBlueColor"
                android:text="@string/add"/>

        </RelativeLayout>

    </FrameLayout>
</ScrollView>
